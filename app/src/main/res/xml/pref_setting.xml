<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="스터디체커 확장기능">

        <Preference
            android:key="show"
            android:summary="스터디체커 FN을 띄웁니다"
            android:title="FN 띄우기"/>
        <Preference
            android:key="setting"
            android:summary="알림 리스너를 설정합니다"
            android:title="알림 리스너 설정"/>
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="stay"
            android:summaryOff="스터디체커를 정지하면 FN 제거"
            android:summaryOn="스터디체커를 정지해도 FN 유지"
            android:title="공부를 정지했을때 FN 유지" />

    </PreferenceCategory>
</PreferenceScreen>